<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FT News</title>
</head>
<body>
  <header class="header">
    <h1 class="header__logo">FT News.</h1>
  </header>

  <div class="wrapper">
    <div class="news">
      <% if(articles != null) { %> 
        <% articles.forEach(function(article) { %> 
          <a href="<%- article.webUrl %>" class="news__newsBox" target="_blank">
            <h3>
              <%- article.webTitle %>
            </h3>
          </a>
        <% }) %> 
      <% } else { %> 
          <p>No posts found.</p>
      <% } %> 
    </div>
  </div>
</body>
</html>